<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userProfileItemViewModel"
            type="com.kimboo.mvvmkotlin.ui.main.adapter.UserProfileItemViewModel"/>
    </data>

    <FrameLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="@{userProfileItemViewModel::onWholeLayoutClicked}"
            android:padding="8dp"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    app:imageUrl="@{userProfileItemViewModel.getUserProfileThumbnailPic()}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Headline"
                        tools:text="Title"
                        android:text="@{userProfileItemViewModel.userProfile.email}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        tools:text="Description"
                        android:text="@{userProfileItemViewModel.userProfile.phone}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </FrameLayout>

</layout>